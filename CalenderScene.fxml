<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="YourControllerClass">
    <children>
        <VBox alignment="CENTER" layoutX="100.0" layoutY="50.0" spacing="10.0">
            <children>
                <DatePicker fx:id="datePicker" promptText="Select a Date" />
                <Button text="Confirm" onAction="#confirmButtonClicked" />
            </children>
        </VBox>
    </children>
</AnchorPane>
